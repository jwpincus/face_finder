<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="panel-body">
        <h1>Login</h1>

        <%= form_tag '/login' do %>

        <%= text_field_tag :email, "Email", class: 'form-control', placeholder: 'Email' %>
        <%= password_field_tag :password, "Password", class: 'form-control', placeholder: 'Password' %>
        <%= submit_tag "Submit", class: 'btn btn-primary' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
